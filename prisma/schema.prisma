generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:.@localhost:5432/PIEinternship?schema=public"
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  avatarURL String?
  videos Video[]
  comments Comment[]
}

model Video{
  id Int @id @default(autoincrement())
  title String
  description String
  videoUrl String @unique
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  commentCounter Int @default(0)
  metaData MetaItem[]
  comments Comment[]
}

model MetaItem{
  id Int @id @default(autoincrement())
  videoId Int
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)
  thumbnailURL String?
  label String
}

model Comment{
  id Int @id @default(autoincrement())
  videoId Int
  video Video @relation(fields: [videoId], references: [id], onDelete: Cascade)
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  content String
  createdAt DateTime @default(now())
}